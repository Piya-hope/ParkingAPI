@model IEnumerable<ParkingSystem.Models.InventoryModel>
@{
    ViewBag.Title = "ViewInventory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@if (Session["UserName"] != null || Session["UserID"] != null || Session["Designation"] != null || Session["SiteID"] != null || Session["SiteName"] != null)
{
    <div class="content-wrapper">
        <div id="div1" runat="server" style="margin-left: 10px; margin-right: 10px;">

            <section class="content-header">
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("Index", "Home")"><i class="fa fa-dashboard"></i>Home</a></li>
                    <li><a href="#"><i class="active"></i>Device Inventory</a></li>
                    <li><a href="@Url.Action("ViewInventory", "Inventory")"><i class="active"></i>View Inventory</a></li>
                </ol>
            </section>
            <br />
            @if (Session["Designation"].ToString() == "Admin")
            {
                <!-- /.design work-->
                <section class="content">
                    <div class="box">
                        <div class="box-header">
                            <h4 class="box-title">View All Inventory Details</h4>
                        </div>
                        <div class="box-body">
                            <table id="tblInventory" class="table table-bordered table-striped font-12" style="width:100%">
                                <thead></thead>
                                <tr>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Inve_ID)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.InventoryName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.ModelName)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Companyname)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Quantity)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Instock)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Onfield)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Scrap)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Total)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Date)
                                    </th>
                                    <th>
                                        @Html.DisplayNameFor(model => model.Description)
                                    </th>
                                    <th>Distribution</th>
                                    <th>Edit</th>
                                    <th style="color:red;"> Delete</th>
                                </tr>

                                @foreach (var item in Model)
                                {
                                    if (item.Status1 == true)
                                    {
                                        <tr style="color:green;">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Inve_ID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InventoryName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ModelName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Companyname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Instock)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Onfield)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Scrap)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Total)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                <span class="glyphicon glyphicon-transfer" style="color: #337ab7"></span>
                                                @Html.ActionLink("Distribute", "Distribution", new { id = item.Inve_ID })
                                            </td>
                                            <td>
                                                <span class="glyphicon glyphicon-edit" style="color: #337ab7"></span>
                                                @Html.ActionLink("Edit", "EditInventory", new { id = item.Inve_ID })
                                            </td>
                                            <td style="color:red;">
                                                <span class="glyphicon glyphicon-trash"></span>
                                                @Html.ActionLink("Delete", "DeleteInventory", new { id = item.Inve_ID }, new { onclick = "return confirm('Are you sure wants to delete?');", @style = "color: red;" })
                                            </td>


                                        </tr>
                                    }
                                    else
                                    {
                                        <tr style="color:red;">
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Inve_ID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.InventoryName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.ModelName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Companyname)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Quantity)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Instock)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Onfield)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Scrap)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Total)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Description)
                                            </td>
                                            <td>
                                                <span class="glyphicon glyphicon-transfer" style="color: #337ab7"></span>
                                                @Html.ActionLink("Distribute", "Distribution", new { id = item.Inve_ID })
                                            </td>
                                            <td>
                                                <span class="glyphicon glyphicon-edit" style="color: #337ab7"></span>
                                                @Html.ActionLink("Edit", "EditInventory", new { id = item.Inve_ID })
                                            </td>
                                            <td style="color:red;">
                                                <span class="glyphicon glyphicon-trash"></span>
                                                @Html.ActionLink("Delete", "DeleteInventory", new { id = item.Inve_ID }, new { onclick = "return confirm('Are you sure wants to delete?');", @style = "color: red;" })
                                            </td>

                                        </tr>
                                    }

                                }

                            </table>
                        </div>
                    </div>


                </section>
            }
        </div>
    </div>
}
<!-- table script -->
<script>
    $(function () {
        $("#tblInventory").prepend($("<thead></thead>").append($(this).find("tr:first"))).dataTable({
            "sScrollY": "250",
            "sScrollX": "10%",
            "sScrollXInner": "100%",
            "scrollCollapse": true,
            "paging": true,
            "bPaginate": true,
            "bLengthChange": true,
            "bFilter": true,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": true,
            "scrollX": true
        });
    });
</script>
