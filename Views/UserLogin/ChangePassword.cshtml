@model ParkingSystem.Models.ChangePasswordModel
@{
    ViewBag.Title = "Change Password";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link href="../../Images/M_Plus_Parking_SystemLogo.jpg" rel="shortcut icon" type="Images/M_Plus_Parking_SystemLogo.jpg" />
    <title>Parking System | @ViewBag.Title</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport" />
    <!-- Bootstrap 3.3.6 -->
    <link href="~/AdminLTE-2.3.3/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.5.0/css/font-awesome.min.css" />
    <!-- Ionicons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/ionicons/2.0.1/css/ionicons.min.css" />
    <!-- Theme style -->
    <link href="~/AdminLTE-2.3.3/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <!-- iCheck -->
    <link href="~/AdminLTE-2.3.3/plugins/iCheck/square/blue.css" rel="stylesheet" />
</head>
<body class="hold-transition login-page">
    <div class="login-box">
        <!-- /.login-logo -->
        @*<div class="login-logo">
                <img src="~/Images/M_Plus_Blue_Logo.png" class="login-logo img-login" alt="Logo" style="width: 84%" />
            </div>*@
        @if (Session["UserName"] != null || Session["UserID"] != null || Session["Designation"] != null || Session["EmailID"] != null || Session["SiteName"] != null)
        {
            <div class="login-box-body">

                <p class="login-box-msg" style="font-size:16px">Change Password</p>

                @using (Html.BeginForm("ChangePassword", "UserLogin", FormMethod.Post, new { @class = "form-box", role = "form", enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group has-feedback font-13">
                        User_Name: @Session["UserName"].ToString()
                    </div>
                    <div class="form-group has-feedback">
                        @Html.TextBoxFor(model => model.OldPassword, new { @class = "form-control font-13", @placeholder = "Enter Old Password", TextMode = "Password" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group has-feedback">
                        @Html.PasswordFor(model => model.NewPassword, new { @class = "form-control font-13", @placeholder = "Enter New Password" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                    </div>

                    <div class="form-group has-feedback">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control font-13", @placeholder = "Confirm Password", TextMode = "Password" })
                        <span class="glyphicon glyphicon-lock form-control-feedback"></span>
                        @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                    </div>
                    <br />
                    <div class="row">
                        <div class="col-xs-4">
                        </div>
                        <div class="col-sm-4 col-xs-4">
                            <input type="submit" id="change1" value="Change Password" class="btn btn-primary btn-block btn-flat" style="width: 108px;" tabindex="20" />
                        </div>
                        <div class="col-sm-4 col-xs-4">
                            <input type="button" value="Cancel" class="btn btn-primary btn-block btn-flat" TabIndex="14" onclick="location.href='@Url.Action("Index", "Home")'" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10" style="color:green">
                                @if (ViewBag.Message != null)
                                {
                                    <text>
                                        <script>
                                                        $(document).ready(function () {
                                                            alert('@ViewBag.Message');
                                                        });
                                        </script>
                                    </text>
                                }
                            </div>
                        </div>
                    </div>
                    <br />
                    <div class="footer mt-5">
                        <div class="text text-center">
                            <P>Copyright &copy; 2022  &nbsp;<a href="#">M_Plus_Parking Services</a>.</P> All rights reserved.
                        </div>
                    </div>


                }
            </div>
        }
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    <!-- /.login-box -->
    <!-- jQuery 2.2.0 -->
    <script src="AdminLTE-2.3.3/plugins/jQuery/jQuery-2.2.0.min.js"></script>
    <!-- Bootstrap 3.3.6 -->
    <script src="AdminLTE-2.3.3/bootstrap/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="AdminLTE-2.3.3/plugins/iCheck/icheck.min.js"></script>
    <script>
        $(function () {
            $('input').iCheck({
                checkboxClass: 'icheckbox_square-blue',
                radioClass: 'iradio_square-blue',
                increaseArea: '20%' // optional
            });
        });
    </script>
</body>
</html>
